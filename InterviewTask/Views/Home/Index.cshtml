@{
	ViewData["Title"] = "Home Page";
}

<div class="text-center">
	<h1 class="display-4">Welcome to Task Submission</h1>

</div>

<p>
	Please refer to your email follow the instructions on the given task.
</p>

<div class="container px-4 py-3" id="icon-grid">
	<h2 class="pb-2 border-bottom">Given Tasks</h2>
	<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 py-3">
		<div class="col d-flex align-items-start">
			<div class="bi text-muted mr-3 mt-1">
				<i class="fas fa-box fa-lg"></i>
			</div>
			<div>
				<h4 class="fw-bold mb-0">
					<a asp-route-id="@ViewBag.Id" asp-action="ViewProduct" asp-controller="Product">Product Page</a>
				</h4>
				<p>View <b>First</b> Product and add to cart options.</p>
			</div>
		</div>
	</div>
</div>

<div class="container px-4 py-3" id="icon-grid">
	<h2 class="pb-2 border-bottom">Bonous Tasks</h2>
	<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4 py-3">
		<div class="col d-flex align-items-start">
			<div class="bi text-muted mr-3 mt-1">
				<i class="fas fa-box fa-lg"></i>
			</div>
			<div>
				<h4 class="fw-bold mb-0">
					<a asp-action="ProductsList" asp-controller="Product">Products List</a>
				</h4>
				<p>View Products list and search options.</p>
			</div>
		</div>
	</div>
</div>